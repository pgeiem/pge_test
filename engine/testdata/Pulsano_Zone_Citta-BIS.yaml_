version: "0.1"
config:
  window: 30d
nonpaying:
  - name: "lunch"
    start: pattern(*/* 13:00)
    end: pattern(*/* 17:00)

sequences:
  - name: "PS08"
    start: pattern(09/01 00:00)
    end: pattern(06/01 00:00)
    rules:
      - nonpaying:
          name: "night"
          start: pattern(*/* 20:00)
          end: pattern(*/* 09:00)
      - nonpaying:
          name: "sunday"
          start: pattern(*/* SUN 00:00)
          end: pattern(*/* MON 00:00)
      - absflatrate:
          name: "daily"
          start: duration(0h)
          end: duration(24h)
          amount: 3.00
      - fixedrate:
          name: "minamount"
          duration: 12m
          amount: 0.20
      - linear:
          name: "hourlyrate"
          hourlyrate: 1.0
          duration: 10h

  - name: "PS07"
    rules:
      - nonpaying:
          name: "night"
          start: pattern(*/* 00:00)
          end: pattern(*/* 09:00)
      - absflatrate:
          name: "daily"
          start: pattern(*/* 00:00)
          end: pattern(*/* 00:00)
          amount: 3.00
      - fixedrate:
          name: "minamount"
          duration: 12m
          amount: 0.20
      - linear:
          name: "hourlyrate"
          hourlyrate: 1.0
          duration: 10h
