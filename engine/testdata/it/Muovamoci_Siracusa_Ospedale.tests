- name: Minimum charge (1 hour)
  now: '2025-06-03T09:00:00'
  tests:
  - amount: 1.0
    end: '2025-06-03T10:00:00'

# Falls entirely within 09:00–13:00 → flat rate 3.00 €
- name: Morning flat rate applies
  now: '2025-06-03T09:00:00'
  tests:
  - amount: 3.0
    end: '2025-06-03T16:00:00'

# Full daytime presence triggers daily flat rate of 6.00 €
- name: Full day flat rate applies
  now: '2025-06-03T09:00:00'
  tests:
  - amount: 6.0
    end: '2025-06-03T20:00:00'

